    <div id="u481" class="ax_default" data-label="Recenzje" data-left="410" data-top="138" data-width="1469" data-height="490">

        <div class="content_card">
            @foreach (var item in Model)
            {
            <div class="card">
                <img src="
                @if (item.Status == ThesisStatus.APPROVED)
                {
                @("images/lecturerfinalthesislist/u162.svg");
                }
                else if (item.Status == ThesisStatus.DISCARD)
                {
                @("images/studyfieldmanagerfinalthesisapplications/u505.svg");
                }
                else
                {
                @("images/studyfieldmanagerfinalthesisapplications/u541.svg");
                }
                " class="status">
            <table>
                <tr>
                    <td class="column_one">Status:</td>
                    <td class="column_two">
                        @if (item.Status == ThesisStatus.APPROVED)
                        {
                            @("Zatwierdzono");
                        }
                        else if (item.Status == ThesisStatus.DISCARD)
                        {
                            @("Nie zatwierdzono");
                        }
                        else
                        {
                            @("Oczekuje na Twoją reakcję");
                        }
                    </td>
                </tr>
                <tr>
                    <td class="column_one">Autor:</td>
                    <td class="column_two">@item.FinalThesis.Participant.Name @item.FinalThesis.Participant.Surname</td>
                </tr>
                <tr>
                    <td class="column_one topic_font_size">Temat:</td>
                    <td class="column_two topic_font_size">@item.ThesisTopic</td>
                </tr>
            </table>
            <div class="button_box">
                <a asp-controller="StudyFieldManagerFinalThesisApplications" asp-action="Confirm" asp-route-id="@item.SubmissionId">
                    <div class="single_button_box">
                        <img src="images/studyfieldmanagerfinalthesisapplications/u494.png">
                        <label>Zatwierdź</label>
                    </div>
                </a>
                <a asp-controller="StudyFieldManagerFinalThesisApplications" asp-action="Edit" asp-route-id="@item.SubmissionId">
                    <div class="single_button_box">
                        <img src="images/lecturerfinalthesislist/u131.png">
                        <label>Edytuj</label>
                    </div>
                </a>
                <a asp-controller="StudyFieldManagerFinalThesisApplications" asp-action="Discard" asp-route-id="@item.SubmissionId">
                    <div class="single_button_box">
                        <img src="images/lecturerfinalthesislist/u132.png">
                        <label>Odrzuć</label>
                    </div>
                </a>
                <a asp-controller="" asp-action="" asp-route-id="">
                    <div class="single_button_box">
                        <img src="images/lecturerfinalthesislist/u137.png">
                        <label>Podgląd</label>
                    </div>
                </a>
            </div>
            </div>
            }
        </div>
